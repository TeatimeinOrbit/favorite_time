<% if posted_content.favorited_by?(current_user) %>
  <div>
    <%= link_to public_posted_content_favorites_path(posted_content.id), method: :delete, remote: true do %>
      ♥<%= posted_content.favorites.count %>いいね
    <% end %>
  </div>
<% else %>
  <div>
    <%= link_to public_posted_content_favorites_path(posted_content.id), method: :post, remote: true do %>
      ♡<%= posted_content.favorites.count %>いいね
    <% end %>
  </div>
<% end %>