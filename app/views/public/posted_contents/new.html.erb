<h2>投稿ページ</h2>

<% form_with model: @posted_content, url: public_posted_contents_path, method: :post do |f| %>
title
category_id
time_of_day_id
name
text
image

<div class="field">
    <%= f.label :posted_content_image, '投稿画像' %></br>
    <%= f.file_field :posted_content_image, accept: "image/*", autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :title, '投稿タイトル' %></br>
    <%= f.file_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :category_id, 'カテゴリー' %></br>
    <%= f.select :category_id %>
  </div>

  <div class="field">
    <%= f.label :time_of_day_id, '時間帯' %></br>
    <%= f.select :time_of_day_id %>
  </div>


  <div class="field">
    <%= f.label :name, 'ユーザーネーム' %></br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction, '自己紹介' %></br>
    <%= f.text_field :introduction, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>