
<h2 class="user_search">ユーザー検索</h2>
<!--ユーザー検索フォーム-->
<%= search_form_for @q_user, url: search_public_users_path do |f| %>
  <div class="user_search_text">
    <%= f.text_field :name_cont %>
  </div>
  <div class="user_search_action">
    <%= f.submit '検索' %>
  </div>
<% end %>



<h2 class="content_search">投稿検索</h2>
<!--投稿検索フォーム-->
<%= search_form_for @q, url: public_posted_contents_path do |f| %>
  <div class="content_search_container">

    <div class="content_search_category">
      <%= f.label :category_id_in, 'カテゴリー' %><br>
      <%= f.collection_check_boxes :category_id_in, @categories, :id, :name %>
    </div>
    <p>x</p>
    <div class="content_search_time_of_day">
      <%= f.label :time_of_day_id_in, '時間帯' %></br>
      <%= f.collection_check_boxes :time_of_day_id_in, @time_of_days, :id, :name %>
    </div>
    <p>x</p>
    <div class="content_search_text">
      <%= f.text_field :title_or_sentence_cont_any %>
    </div>

    <div class="content_search_action">
      <%= f.submit '検索' %>
    </div>

  </div>
<% end %>

