<!--投稿詳細-->
<table class="content_show_table">
  <tbody>
    <tr>
      <td class="content_show_title"><%= @posted_content.title %></td>
    <tr class="content_show_profile_image_line">
      <td class="content_show_category_name"><%= @posted_content.category.name%></td>
      <td class="content_show_time_of_day_name"><%= @posted_content.time_of_day.name%></td>
      <td class="content_show_profile_image"><%= image_tag @posted_content.user.get_profile_image %></td>
      <td class="content_show_user_name"><%= @posted_content.user.name%></td>
    </tr>
    <% if @posted_content.image.present? %>
    <tr>
      <td class="content_show_thum_box"><%= image_tag @posted_content.image %></td>
    </tr>
    <% end %>
    <tr>
      <td class="content_show_sentence"><%= @posted_content.sentence%></td>
    </tr>
  </tbody>
</table>

<% if @posted_content.user_id == current_user.id %>
  <div>
    <%= link_to '編集する', edit_public_posted_content_path(@posted_content.id) %>
  </div>
<% else %>
  <!--いいねボタン-->
  <div id="favorite-btn_<%=@posted_content.id %>">
    <%= render 'public/favorites/favorite', posted_content: @posted_content %>
  </div>
  <!--報告ボタン-->
  <div>
    <%= link_to '報告する', new_public_posted_content_report_path(@posted_content.id) %>
  </div>
  <!--コメント投稿フォーム-->
  <div id="comment_form">
    <%= render 'public/posted_comments/form', posted_content: @posted_content, posted_comment: @posted_comment %>
  </div>
<% end %>

<!--コメント一覧-->
<div id="comments_index">
  <%= render 'public/posted_comments/index', posted_content: @posted_content %>
</div>